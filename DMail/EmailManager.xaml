<Window x:Class="DMail.EmailManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMail"
        mc:Ignorable="d"
        Title="EmailManager" MinHeight="450" MinWidth="800">
    <Grid>
        <TabControl x:Name="TAB_Control" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <TabItem x:Name="BT_Write_Email" Header="Write" Height="23" VerticalAlignment="Top">
                <local:TabWriteMail/>
            </TabItem>
            <TabItem x:Name="BT_Select_Recipient" Header="Recipients">
                <local:TabSelectRecipients/>
            </TabItem>
            <TabItem x:Name="BT_Validation" Header="Validation" >
                <local:TabValidation/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
